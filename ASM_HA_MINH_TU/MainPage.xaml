<Page
    x:Class="ASM_HA_MINH_TU.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM_HA_MINH_TU"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Pivot x:Name="rootPivot" Title="Tin Mới" Background="MidnightBlue" Foreground="White" >
        <!-- Set pivot title style -->
        <Pivot.TitleTemplate>
            <DataTemplate>
                <Grid>
                    <TextBlock  Text="{Binding}" FontFamily="Segoe UI Light" FontSize="24" />
                </Grid>
            </DataTemplate>
        </Pivot.TitleTemplate>

        <!-- Set pivot Header style -->
        <Pivot.HeaderTemplate>
            <DataTemplate>
                <Grid>
                    <TextBlock Text="{Binding}" Foreground="White" />
                </Grid>
            </DataTemplate>
        </Pivot.HeaderTemplate>

        <!-- First pivot item,  tin mới nhất trong ngày -->
        <PivotItem Header="Xem Nhiều Nhất">
            <ScrollViewer>
                <StackPanel x:Name="stackpanel" Background="MidnightBlue" Padding="30">
                    <Grid BorderBrush="black" BorderThickness="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid   Background="Gray" BorderBrush="black" BorderThickness="2">
                            <!-- Stretch to fill news image over grid -->
                            <Image  Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImage1" />
                                </Image.Source>
                            </Image>
                            <!-- Stack news title over image -->
                            <TextBlock x:Name="url1" Text="1" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Column="2"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImage2Sports"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="url2Sports" Text="2" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImage3Sports"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="url3Sports" Text="3"  Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImage4Sports"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="url4Sports" Text="4" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="2"   Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImage5Sports"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="url5Sports" Text="5" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImage6Sports"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="url6Sports" Text="6" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="3"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImage7Sports"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="url7Sports" Text="7" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImage8Sports"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="url8Sports" Text="8" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </PivotItem>
        
        <PivotItem Header="Thể Thao">
            <ScrollViewer>
                <StackPanel x:Name="stackpanel2" Background="MidnightBlue" Padding="30">
                    <Grid BorderBrush="black" BorderThickness="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid   Background="Gray" BorderBrush="black" BorderThickness="2">
                            <!-- Stretch to fill news image over grid -->
                            <Image  Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImagesp1" />
                                </Image.Source>
                            </Image>
                            <!-- Stack news title over image -->
                            <TextBlock x:Name="urlsp1" Text="1" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Column="2"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImgSp2"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlSp2" Text="2" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImgSp3"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlSp3" Text="3"  Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImgSp4"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlSp4" Text="4" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="2"   Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImgSp5"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlSp5" Text="5" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImgSp6"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlSp6" Text="6" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="3"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImgSp7"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlSp7" Text="7" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImgSp8"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlSp8" Text="8" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>

                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </PivotItem>
        
        <PivotItem Header="Kinh tế">
            <ScrollViewer>
                <StackPanel x:Name="stackpanel3" Background="MidnightBlue" Padding="30">
                    <Grid BorderBrush="black" BorderThickness="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid   Background="Gray" BorderBrush="black" BorderThickness="2">
                            <!-- Stretch to fill news image over grid -->
                            <Image  Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImageKt1" />
                                </Image.Source>
                            </Image>
                            <!-- Stack news title over image -->
                            <TextBlock x:Name="urlKt1" Text="1" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Column="2"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImageKt2"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlKt2" Text="2" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImageKt3"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlKt3" Text="3"  Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImageKt4"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlKt4" Text="4" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="2"   Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImageKt5"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlKt5" Text="5" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImageKt6"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlKt6" Text="6" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="3"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImageKt7"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlKt7" Text="7" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="1"  Background="Gray" BorderBrush="black" BorderThickness="2">
                            <Image Stretch="UniformToFill" Opacity="0.60">
                                <Image.Source>
                                    <BitmapImage x:Name="urlImageKt8"/>
                                </Image.Source>
                            </Image>
                            <TextBlock x:Name="urlKt8" Text="8" Margin="10" TextWrapping="Wrap" Foreground="White" FontFamily="Segoe UI Light" FontSize="24" />
                        </Grid>

                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </PivotItem>
        <PivotItem Header="Tìm kiếm">
            <ScrollViewer>
                <StackPanel x:Name="stackpanel4" Background="MidnightBlue" Padding="30">
                    <!-- Category combobox -->
                    <ComboBox x:Name="CategoryCombo" Header="Category" DisplayMemberPath="Source" Foreground="white" >
                        <ComboBoxItem Content="Tất cả"/>
                        <ComboBoxItem Content="Thể Thao"/>
                        <ComboBoxItem Content="Kinh Tế"/>
                        <ComboBoxItem Content="Công Nghệ"/>
                        <ComboBoxItem Content="Giải Trí"/>
                        <ComboBoxItem Content="Sức Khỏe"/>
                    </ComboBox>
                    <!-- Input Box that allows users to key in keywords -->
                    <TextBox x:Name="SearchKeyword" PlaceholderText="Nhập từ khóa (thử 'Covid-19' hoặc 'FPT-ApTech')" KeyDown="SearchKeyword_KeyDown" Width="400" HorizontalAlignment="Left" Foreground="White"></TextBox>

                </StackPanel>
            </ScrollViewer>
        </PivotItem>
        <PivotItem Header="Cài Đặt" >
            <StackPanel Background="#91bbff" Padding="60">
                <!-- toggle Đổi Màu Nền -->
                <ToggleSwitch x:Name="toggleSwitch2" Header="Đổi Màu Nền" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsOn="False"
              Toggled="toggleSwitch2_Toggled"  />
                <!-- Toggle Thông Báo Tin Mới Nhất -->
                <ToggleSwitch x:Name="toggleSwitch" Header="Nhận Thông Báo Tin Mới Nhất" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsOn="False"
              Toggled="ToggleSwitch_Toggled"  />
            </StackPanel>

        </PivotItem>

    </Pivot>
</Page>
